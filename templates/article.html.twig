{% extends 'base.html.twig' %}
    {#cette page hérite de base#}

{% block title %}
    <title>{{ article.title }}</title>
{% endblock %}

{% block main %}
    {#    ce qui suit est assemblé avec base#}

    {% if article.isPublished  %}

        <article>
            <h2>{{ article.title }}</h2>
            <p>{{ article.content }}</p>
{#            <p>posté le {{ article.publishedAt|date ('d-M-y') }}</p>#}
            <p>citation de {{ article.author }}</p>
            <img src="{{ article.image }}" alt="photo du film">
        </article>

    {% endif %}


{% endblock %}
{#    fin assemblage#}

{% block footer %}
    <li class="footer-element">{{ article.title }}</li>
{% endblock %}