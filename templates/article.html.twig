{% extends 'base.html.twig' %}
    {#cette page hérite de base#}

{% block title %}
    <title>{{ articles.title }}</title>
{% endblock %}

{% block main %}
    {#    ce qui suit est assemblé avec base#}

    {% if articles.isPublished  %}

        <article>
            <h2>{{ articles.title }}</h2>
            <p>{{ articles.description }}</p>
            <p>posté le {{ articles.publishedAt|date ('d-M-y') }}</p>
            <p>citation de {{ articles.author }}</p>
            <img src="{{ articles.image }}" alt="photo du film">
        </article>

    {% endif %}


{% endblock %}
{#    fin assemblage#}

{% block footer %}
    <li class="footer-element">{{ articles.title }}</li>
{% endblock %}