{% extends 'base.html.twig' %}

{% block main %}
                {{ form_start(form) }}
    <div class="container-fluid">
        <div class="container col-8">
            <div class="row">
                <div class="d-flex justify-content-center label">
                    {{ form_label(form.title,'Titre',{'label_attr':{'class':'form-article-title-label'}}) }}
                </div>
                    {{ form_widget(form.title,{'attr':{'class':'form-article-title-widget'}}) }}
            </div>

            <div class="row">
                <div class="d-flex justify-content-center label">
                    {{ form_label(form.image,'Image',{'label_attr':{'class':'form-article-title-label'}}) }}
                </div>
                    {{ form_widget(form.image,{'attr':{'class':'form-article-title-widget'}}) }}
            </div>

            <div class="row">
                <div class="d-flex justify-content-center label">
                    {{ form_label(form.isPublished,'Publié',{'label_attr':{'class':'form-article-title-label'}}) }}
                </div>
                    {{ form_widget(form.isPublished,{'attr':{'class':'form-article-title-widget'}}) }}
            </div>

            <div class="row">
                <div class="d-flex justify-content-center label">
                    {{ form_label(form.author,'Auteur',{'label_attr':{'class':'form-article-title-label'}}) }}
                </div>
                    {{ form_widget(form.author,{'attr':{'class':'form-article-title-widget'}}) }}
            </div>

            <div class="row">
                <div class="d-flex justify-content-center label">
                    {{ form_label(form.content,'Contenu',{'label_attr':{'class':'form-article-title-label'}}) }}
                </div>
                    {{ form_widget(form.content,{'attr':{'class':'form-article-title-widget'}}) }}
            </div>
                <div class="d-flex justify-content-center label">
                    {{ form_label(form.category,'Catégorie',{'label_attr':{'class':'form-article-title-label'}}) }}
                </div>
                <div class="d-flex justify-content-center">
                    {{ form_widget(form.category,{'attr':{'class':'form-article-title-widget'}}) }}
                </div>
            <div class="row">
                {{ form_widget(form.submit) }}
            </div>
        </div>
    </div>
            {{ form_end(form) }}
{% endblock %}