{% extends 'base.html.twig' %}
    {#cette page hérite de base#}


{% block main %}
    {#    ce qui suit est assemblé avec base#}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <h2 class="alert-message">{{ message }}</h2>
        </div>
    {% endfor %}

    {% for category in categories  %}
        {% if category.isPublished  %}

            <article>
                <h2 style="color: {{ category.color }}">{{ category.title }}</h2>
                <p>{{ category.description }}</p>
                {#            <p>posté le {{ article.publishedAt|date ('d-M-y') }}</p>#}
{#                <p>citation de {{ article.author }}</p>#}
{#                <a class="images" href="{{ path('article',{'id':article.id}) }}"><img src="{{ article.image }}" alt="photo du film"></a>#}
                <a href="{{ path('admin-category',{'id':category.id}) }}">Voir la catégorie</a>
                <a href="{{ path('admin-delete-category',{'id':category.id}) }}">Supprimer catégorie</a>
            </article>

        {% endif %}
    {% endfor %}


{% endblock %}
{#    fin assemblage#}

