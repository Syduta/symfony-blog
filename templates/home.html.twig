{% extends 'base.html.twig' %}

{% block main %}

<form action="{{ path('home') }}" method="get">
    <label for="name"></label>
    <input type="text" name="name" placeholder="Votre nom">
    <label for="age"></label>
    <input type="text" name="age" placeholder="Votre âge">
    <button>Envoyer</button>
</form>

{% for article in articles|slice(1)  %}
{% if article.isPublished  %}

<article>
    <h2>{{ article.title }}</h2>
    <p>{{ article.description }}</p>
    <p>posté le {{ article.publishedAt|date ('d-M-y') }}</p>
    <p>citation de {{ article.author }}</p>
    <a class="images" href="{{ path('article',{'id':article.id}) }}"><img src="{{ article.image }}" alt="photo du film"></a>
    <a href="{{ path('article',{'id':article.id}) }}">Voir l'article</a>
</article>

{% endif %}
{% endfor %}

{% endblock %}

