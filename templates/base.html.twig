<!doctype html>
<html lang=fr>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('style.css') }}">
    {% block title %}
    <title>Symfoblog</title>
    {% endblock %}
</head>
<body>
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        <h2 class="alert-success">{{ message }}</h2>
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-error">
        <h2 class="alert-error">{{ message }}</h2>
    </div>
{% endfor %}
<header>
    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Accueil</a></li>
            <li><a href="{{ path('admin-articles') }}">Liste des articles</a></li>
            <li><a href="{{ path('admin-categories') }}">Liste des catégories</a></li>
            <li><a href="{{ path('admin-new-article') }}">Créer article</a></li>
            <li><a href="{{ path('admin-new-category') }}">Créer catégorie</a></li>
            <li>
            <form action="{{ path('admin-articles-search') }}" method="get">
                <input type="text" name="search" placeholder="Votre recherche">
                <input type="submit">
            </form>
            </li>
        </ul>
    </nav>
</header>
<main>
{#    ici on laisse de la place pour que le contenu de nos autres pages s'y affiche#}
    {% block main %}
    {% endblock %}
</main>
<footer>
    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Accueil</a></li>
            <li><a href="{{ path('admin-articles') }}">Liste des articles</a></li>
            <li><a href="{{ path('admin-categories') }}">Liste des categories</a></li>
        </ul>
    </nav>
    {% block footer %}
            <li class="footer-element">Symfoblog</li>
    {% endblock %}

</footer>


</body>
</html>
