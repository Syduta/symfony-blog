    {% if article.isPublished  %}

        <article>
            <h2>{{ article.title }}</h2>
            <p>{{ article.description }}</p>
            <p>post√© le {{ article.publishedAt|date ('d-M-y') }}</p>
            <p>citation de {{ article.author }}</p>
            <a class="images" href="{{ path('article',{'id':article.id}) }}"><img src="{{ article.image }}" alt="photo du film"></a>
            <a href="{{ path('article',{'id':article.id}) }}">Voir l'article</a>
        </article>

    {% endif %}
{% endfor %}

{% endblock %}